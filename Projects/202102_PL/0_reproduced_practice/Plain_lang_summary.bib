@article{xiongjingminYiGaiNianGouTuWeiJiaoXueCeLueTiShengXueShengKeJiLunWenYueDuNengLi2010,
  title = {以概念構圖為教學策略提升學生科技論文閱讀能力},
  author = {{熊京民} and {蔡循恒} and {楊金寶}},
  year = {2010},
  month = jun,
  journal = {機械技師學刊},
  volume = {3},
  number = {2},
  pages = {26--31},
  abstract = {本研究應用概念構圖為教學策略，以提升學生閱讀理解科技期刊論文的能力。在2009年對46名屏東科技大學機械系三年級的學生，進行一學期的實驗教學，以「物理氣相沉積」(physical vapor deposition)之期刊論文為閱讀素材，建構一套包含六個單元的教學模組，並以前測成績將學生分為高、低分兩組，比較高低分兩組的學習成效。實驗結果顯示：1.實施概念構圖教學策略，需讓學生經過一段時間的適應與練習；本研究中，學生從第三單元起，概念構圖繪製技巧已提升到一定的水準；2.參與實驗的學生，經一學期使用概念構圖教學策略後，對期刊論文閱讀理解的能力有明顯的提升；3.學生對課程使用概念構圖教學策略給予正向肯定的態度；4.學生的學習態度愈佳，愈能提升期刊閱讀理解能力；本研究中，低分組學生對概念構圖教學策略有比高分組學生更正向的態度，其閱讀理解能力亦有較大的進步。}
}

