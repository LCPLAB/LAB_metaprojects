  author = {Kaynar, Or and Amichai-Hamburger, Yair},
  date = {2008-03-01},
  journaltitle = {Computers in Human Behavior},
  shortjournal = {Computers in Human Behavior},
  series = {Part {{Special Issue}}: Cognition and {{Exploratory Learning}} in {{Digital Age}}},
